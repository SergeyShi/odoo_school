<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_service_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Акт виконаних послуг</h2>
                    <p><strong>Номер акту:</strong> <t t-esc="doc.name"/></p>
                    <p><strong>Дата:</strong> <t t-esc="doc.report_date"/></p>
                    <p><strong>Клієнт:</strong> <t t-esc="doc.contract_id.partner_id.name"/></p>
                    <p><strong>Опис послуг:</strong></p>
                    <p t-esc="doc.description"/>
                    <p><strong>Сума:</strong> <t t-esc="doc.amount"/> <t t-esc="doc.currency_id.name"/></p>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_service_report"
        model="it.outsource.service.act"
        string="Акт виконаних послуг"
        report_type="qweb-pdf"
        name="your_module_name.report_service_report_document"
        file="your_module_name.report_service_report_document"
        print_report_name="'Акт_' + object.name"
    />
</odoo>