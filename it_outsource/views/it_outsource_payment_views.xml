<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Tree View -->
        <record id="view_payment_tree" model="ir.ui.view">
            <field name="name">it.outsource.payment.tree</field>
            <field name="model">it.outsource.payment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="invoice_id"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="payment_method"/>
                </tree>
            </field>
        </record>

        <!-- Payment Form View -->
        <record id="view_payment_form" model="ir.ui.view">
            <field name="name">it.outsource.payment.form</field>
            <field name="model">it.outsource.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="invoice_id"/>
                                <field name="date"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="payment_method"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_payment_kanban" model="ir.ui.view">
            <field name="name">it.outsource.payment.kanban</field>
            <field name="model">it.outsource.payment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="payment_method">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="payment_method"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Date:
                                        <field name="date"/>
                                    </div>
                                    <div>Amount:
                                        <field name="amount"/>
                                    </div>
                                    <div>Method:
                                        <field name="payment_method"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Payment Action -->
        <record id="action_payment" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="res_model">it.outsource.payment</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Payment Menu -->
        <menuitem id="menu_payment_action" name="Payments" parent="menu_server_rental_payments" action="action_payment"
                  sequence="10"/>
    </data>
</odoo>
