<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Contract Tree View -->
        <record id="view_contract_tree" model="ir.ui.view">
            <field name="name">it.outsource.contract.tree</field>
            <field name="model">it.outsource.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="number"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="monthly_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Contract Form View -->
        <record id="view_contract_form" model="ir.ui.view">
            <field name="name">it.outsource.contract.form</field>
            <field name="model">it.outsource.contract</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"
                               options="{'clickable':'1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="state" widget="statusbar"/>-->
                                <field name="partner_id"/>
                                <field name="number"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="monthly_total" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Servers and Services">
                                <field name="product_ids" widget="many2many_tags"/>
                            </page>
                            <page string="Invoices">
                                <field name="invoice_ids" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="due_date"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                        <!-- Додаємо панель історії та коментарів -->
                        <div class="oe_chatter">
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Contract Kanban View -->
        <record id="view_contract_kanban" model="ir.ui.view">
            <field name="name">it.outsource.contract.kanban</field>
            <field name="model">it.outsource.contract</field>
            <field name="arch" type="xml">
                <kanban default_group_by="partner_id">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                    <div>
                                        <field name="partner_id"/>
                                    </div>
                                    <div>
                                        <field name="monthly_total"/> €/month
                                    </div>
                                    <div>
                                        <field name="state" widget="statusbar"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Contract Action -->
        <record id="action_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">it.outsource.contract</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first contract
                </p>
            </field>
        </record>

        <!-- Contract Menu -->
        <menuitem id="menu_contract_action"
                  name="Contracts"
                  parent="menu_server_rental_contracts"
                  action="action_contract"
                  sequence="10"/>
    </data>
</odoo>
